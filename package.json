{
  "name": "@hyperse/config-loader",
  "version": "1.0.7",
  "description": "A TypeScript path alias resolver for Node.js applications that works seamlessly with both development (config-loader) and production environments. This package automatically resolves path aliases based on your `tsconfig.json` configuration, eliminating the need for complex relative imports.",
  "keywords": [
    "hyperse",
    "typescript",
    "esm",
    "config loader",
    "cjs",
    "type:module"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/config-loader.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "tsup",
    "changeset": "changeset",
    "cz": "cz",
    "lint": "eslint .",
    "lint-fix": "yarn lint --fix",
    "lint-staged-files": "lint-staged --allow-empty",
    "next": "next build",
    "prepare": "husky",
    "release": "yarn build && changeset publish",
    "test": "run-s test-unit",
    "test-task": "vitest run",
    "test-unit": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@hyperse/deep-merge": "^1.0.1",
    "@hyperse/unplugin-swc": "^1.0.2",
    "@manypkg/get-packages": "^3.1.0",
    "@swc/core": "^1.15.8",
    "cosmiconfig": "^9.0.0",
    "get-tsconfig": "^4.13.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@hyperse/eslint-config-hyperse": "^1.5.0",
    "@types/node": "^25.0.8",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "execa": "^9.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.55.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "packageManager": "yarn@4.10.2",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
